<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">password</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/LearnerAcademy</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        
        
     <!-- hibernate config  -->
    <property name="hbm2ddl.auto">update</property>
    <property name="show_sql">true</property>
    
    <mapping class="com.project.pojo.Teacher"/>
    <mapping class="com.project.pojo.Subject"/>
    <mapping class="com.project.pojo.Student"/>
    <mapping class="com.project.pojo.Classes"/>
    
    
    </session-factory>
</hibernate-configuration>
